<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#a8342c">

    <TextView
        android:id="@+id/txtSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layoutDirection="ltr"
        android:background="#992d26" >

        <EditText
            android:id="@+id/SignUsername"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:background="#992d26"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/StarUserName"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#F9B1AF"
            android:layout_marginStart="5dp"
            android:textDirection="ltr"
            android:layout_marginRight="13dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layoutDirection="ltr"
        android:background="#992d26" >

        <EditText
            android:id="@+id/SignEmail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:background="#992d26"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/StarEmail"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#F9B1AF"
            android:layout_marginStart="5dp"
            android:textDirection="ltr"
            android:layout_marginRight="13dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layoutDirection="ltr"
        android:background="#992d26" >

        <EditText
            android:id="@+id/SignPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="#992d26"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/StarPassword"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#F9B1AF"
            android:layout_marginStart="5dp"
            android:textDirection="ltr"
            android:layout_marginRight="13dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layoutDirection="ltr"
        android:background="#992d26" >

        <EditText
            android:id="@+id/SignConfirmPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:background="#992d26"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/StarConfirmPassword"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#F9B1AF"
            android:layout_marginStart="5dp"
            android:textDirection="ltr"
            android:layout_marginRight="13dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:backgroundTint="#ffbbb7"
        android:textColor="#5A0019"
        android:padding="10dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txtAlreadyMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm already a member"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:textStyle="bold"/>

</LinearLayout>